{
  "name": "moodcloud",
  "version": "1.0.0",
  "main": "src/server.js",
  "repository": "https://github.com/nattts/moodcloud.git",
  "license": "MIT",
  
  "scripts": {
    "serve": "cross-env NODE_PATH=src node src/server.js",
    "dev": "cross-env NODE_PATH=src nodemon -e js,css,html,json,mjs",
    "build": "cross-env NODE_PATH=src browserify src/client.js -o src/static/dist/bundle.js",
    "change-watch": "cross-env NODE_PATH=src watchify src/client.js -o src/static/dist/bundle.js",
    "test": "jest",
    "test-watch": "jest _tests_ --watch"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "@babel/preset-env"
          ]
        }
      ]
    ]
  },
  "dependencies": {
    "babelify": "^10.0.0",
    "browserify": "^16.2.3",
    "cors": "^2.8.5",
    "cross-env": "^5.2.0",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "jest": "^24.7.1",
    "nodemon": "^1.18.11",
    "watchify": "^3.11.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.4.4"
  }
}
